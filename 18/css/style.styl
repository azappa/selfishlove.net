imported-fonts(family,directory,filename,weight)
  font-family family
  src url(directory+filename+'.eot')
  src url(directory+filename+'.eot?#iefix') format('embedded-opentype'), url(directory+filename+'.woff') format('woff'), url(directory+filename+'.ttf') format('truetype'), url(directory+filename+'.svg#'+family) format('svg')
  font-weight weight
  font-style normal

span-text(color, size, percentage)
  color color
  font-size size
  line-height percentage

center-me(width_)
  width width_
  margin 0 auto

border-radius(arguments)
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

transition()
  -webkit-transition arguments
  -moz-transition arguments
  -o-transition arguments
  -ms-transition arguments
  transition arguments

transform()
  -webkit-transform arguments
  -moz-transform arguments
  -o-transform arguments
  -ms-transform arguments
  transform arguments

clearfix()
  content '.'
  display block
  height 0
  clear both
  visibility hidden

@font-face
  imported-fonts('SourceSansPro','../fonts/','SourceSansPro-Light',100)

@font-face
  imported-fonts('SourceSansPro','../fonts/','SourceSansPro-Regular',200)

.spl
  font-family 'SourceSansPro',sans-serif
  font-weight 100

.spr
  font-family 'SourceSansPro',sans-serif
  font-weight 200

* 
  -webkit-font-smoothing antialiased
  text-shadow 0 1px 1px rgba(0,0,0,0.15)

body
  background: url('data:image/png;base64,');

  #installMe
    position absolute
    width 80%
    left 10%
    right 10%
    border-radius 25px
    span-text rgba(255,255,255,0.8) 24px 120%
    background rgba(0,0,0,0.5)
    
    &>span
      padding 10px
      display block
      text-align center

  #container
    center-me 70%

    #text
      position relative
      overflow hidden
      height 1px

    span.closeMe,
    span#photoNumber
      position absolute
      z-index 10
      top 20px
      background rgba(0,0,0,0.3)
      height 50px
      width 50px
      overflow hidden
      span-text rgba(255,255,255,1) 28px 100%
      text-shadow 0 1px 1px rgba(0,0,0,0.50)
      text-align center

    span.closeMe
      right 0

      &>img
        width 100%
        height auto

    span#photoNumber
      left 0
      font-weight 100

      &>span
        padding 13px 0
        display block
        text-align center

    span.desc
      span-text rgba(0,0,0,0.3) 24px 120%
      display block
      margin 10px 0
      background rgba(255,255,255,0.9)
      border-top 10px solid rgba(0,0,0,0.5)
      padding 50px
      position relative

    img.photo
      position relative
      cursor pointer
      margin 2%
      width 21%
      height auto
      border-radius 50%
      box-shadow 0 0 10px rgba(0,0,0,0.3)
      opacity 0.5
      transition all 0.5s ease-in-out

      &.active
        opacity 1

@media all and (max-width:480px) and (orientation:landscape)

  html,body
    min-height 480px

    #container 
      center-me 90%
      
      img.photo
        height auto
        transition all 0.3s ease-in-out
        width 21%

      span.desc
        span-text rgba(0,0,0,0.3) 18px 110%
        padding 20px 75px
        border-top 5px solid rgba(0,0,0,0.5)

      span.closeMe,
      span#photoNumber
        top 15px

@media all and (max-width:480px) and (orientation:portrait)

  html,body
    min-height 480px

    #container 
      center-me 90%

      img.photo
        height auto
        transition all 0.3s ease-in-out
        width 46%

      span.desc
        span-text rgba(0,0,0,0.3) 18px 110%
        padding 20px 75px
        border-top 5px solid rgba(0,0,0,0.5)

      span.closeMe,
      span#photoNumber
        top 15px

@media all and (-webkit-min-pixel-ratio: 2)
  body
    background: url('data:image/png;base64,')